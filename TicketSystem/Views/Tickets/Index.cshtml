@model List<TicketSystem.Domain.DomainModels.Ticket>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Tickets" asp-action="Create">Add New Ticket</a>
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row">
            }


            <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem; height: 50rem;">
                    <img class="card-img-top" src="@item.Image" style="height: 50%" />

                    <div class="card-body">
                        <h3 class="card-title">@item.Name</h3>
                        <p class="card-text">@item.Genre</p>

                        <h6>Price: @item.Price$</h6>
                    </div>

                    <div class="card-footer">
                        <a asp-controller="Tickets" asp-action="AddTicketToCart" asp-route-id="@item.Id" class="btn btn-info">Add to Card</a>
                        <a asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                        <a asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-secondary">Delete</a>

                    </div>
                </div>
            </div>

            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>
